{{#if loggedIn}}
<h3 class="mt-5 text-center">{{collection.title}}</h3>
<section class="flex-row justify-center">
    {{#each collection.apartments}}
    <section class="card" id="{{@index}}">
    <a href="/apartment/{{id}}">
    <header>{{address1}}, {{address2}} <br> {{city}}, {{state}}, {{zip}} </header>

    <div class="card-body">
      <img src="{{ imagelink }}" alt="{{ address1 }}">
      <p class="description">Added by: {{ user.firstName }} on {{ format_date date_added }}</p>
      <p class="text-center" id="rating"> {{ rating }}</p>
      <p>{{beds}} bed / {{baths}} bath <br>
        Rent: ${{ rent }} <br>
        Notes: {{ notes }}
      </p>
    </div>
  </a>
  
  {{#each (sort comments) }}
  <div class="comment">
    <h4>{{ user.firstName }}</h4>
    <p>{{ text }}</p></div>
  {{/each}}

  <form class="add-comment">
    <div class="form-card">
      <input class="form-input" type="text" placeholder="Add a comment.." id="comment"/>
    </div>
  </form>
</section>
    {{/each}}
    <div class="buttons display-flex">
      <div class="start-buttons">
        <a href="/apartmentForm">Add apartment</a>
    </div>
    </div>
</section>


{{else}}

<p class="m-auto">Please <a href="/login">log in</a> or <a href="/signup">create an account</a> to view this page.</p>

{{/if}}

<script src="/js/collectionPage.js"></script>
