<div class="login-card">
    <h2 class="card-title">Sign in</h2>
    <text>Welcome back, good luck searching!</text>
    <form class="login-form">
        <div class="form-card">
            <label for="email-login"><b>Email address</b></label>
            <input class="form-input" type="text" placeholder="Enter email address"/>

            <label for="password-login"><b>Password</b></label>
            <input class="form-input" type="text" placeholder="Enter password"/>

            <button type="submit">Login</button>
        </div>
    </form>
</div>
<div class="login-card">
    <h2 class="card-title">Create an Account</h2>
    <text>Lets find some places!</text>
    <form class="signup-form">
        <div class="form-card">
            <label for="first-name">First name</label>
            <input class="form-input" type="text" id="signup-first"/>
        </div>
        <div class="form-card">
            <label for="last-name">Last name</label>
            <input class="form-input" type="text" id="signup-last"/> 
        </div>
        <div class="form-card">
            <label for="email">Email address</label>
            <input class="form-input" type="text"/>
        </div>
        <div class="form-card">
            <label for="password">Password</label>
            <input class="form-input" type="text"/>
        </div>
        <div class="form-card">
            <label for="reenter-password">Re-enter password</label>
            <input class="form-input" type="text"/>
        </div>
        <div class="form-card">
            <button type="submit">Sign Up</button>
        </div>
    </form>
</div>

<script src="/public/js/login.js"></script>