<div class="login-card">
    <h2 class="card-title">Create an Account</h2>
    <text>Lets find some places!</text>
    <form class="signup-form">
        <div class="form-card">
            <label for="first-name">First name</label>
            <input class="form-input" type="text" id="signup-first"/>
        </div>
        <div class="form-card">
            <label for="last-name">Last name</label>
            <input class="form-input" type="text" id="signup-last"/> 
        </div>
        <div class="form-card">
            <label for="email">Email address</label>
            <input class="form-input" type="text"/>
        </div>
        <div class="form-card">
            <label for="password">Password</label>
            <input class="form-input" type="text"/>
        </div>
        <div class="form-card">
            <label for="reenter-password">Re-enter password</label>
            <input class="form-input" type="text"/>
        </div>
        <div class="form-card">
            <a href="/apartmentCollection">Sign up</a>
        </div>
    </form>
</div>

<script src="/public/js/signup.js"></script>
